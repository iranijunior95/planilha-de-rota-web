<%#
 propriedades componente modalDelete:
 {
    titulo: 'titulo do modal',
    mensagem: 'mensagem para deletar'
 }
%>

<div class="modal fade" id="modalDeletar" tabindex="-1" aria-labelledby="modalDeletarLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title"><%= titulo %></h5>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="lblRespostaDeletar"><%= mensagem %></label>

                            <select class="form-control" id="selectRespostaDeletar" data-no-select2>
                                <option value="sim">SIM</option>
                                <option value="não">NÃO</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-success btn-sm" id="btn-deletar-confirmar">
                    <b>
                        <i class="fa-solid fa-check"></i> Confirmar
                    </b>
                </button>

                <button type="button" class="btn btn-danger btn-sm" id="btn-deletar-cancelar">
                    <b>
                        <i class="fa-solid fa-xmark"></i> Cancelar
                    </b>
                </button>
            </div>
        </div>
    </div>
</div>